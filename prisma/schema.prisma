generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  password  String
  createdAt DateTime    @default(now())
  userItems UserItems[]
}

model UserItems {
  id           Int        @id @default(autoincrement())
  userId       Int
  itemsEvent   ItemsEvent @relation(fields: [itemsEventId], references: [id])
  itemsEventId Int
  createdAt    DateTime   @default(now())
  users        Users      @relation(fields: [userId], references: [id])
}

model ItemsEvent {
  id        Int         @id @default(autoincrement())
  itemId    Int
  name      String
  category  String
  price     String
  createdAt DateTime    @default(now())
  userItems UserItems[]
}
